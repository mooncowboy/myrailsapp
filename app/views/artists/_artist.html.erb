<div id="<%= dom_id artist %>">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
        <span class="mr-2"><%= artist.id %></span>
        <span class="mr-2"><%= link_to artist.name, artist_path(artist.id), class: "text-blue-500 text-bold hover:underline" %></span>
    </div>
    
        <div class="flex items-center">
        <% star_rating = (artist.popularity / 20.0).ceil %>
        <span class="mr-2">Popularity score: 
            <% 5.times do |i| %>
                <% if i < star_rating %>
                    <i class="fas fa-star text-yellow-500"></i>
                <% else %>
                    <i class="far fa-star text-yellow-500"></i>
                <% end %>
            <% end %>
        </span>
        <% if action_name != "show" %>
            <span><%= link_to 'Edit', edit_artist_path(artist), class: "text-blue-500 hover:underline" %></span>
        <% end %>
    </div>
</div>
